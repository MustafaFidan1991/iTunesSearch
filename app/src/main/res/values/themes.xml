<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ITunesSearch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ITunesSearch.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ITunesSearch.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ITunesSearch.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleTextViewStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DateTextViewStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:textSize">@dimen/date_text_size</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="PriceTextViewStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:textSize">@dimen/price_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FilterButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:textSize">@dimen/filter_btn_text_size</item>
        <item name="android:background">@drawable/filter_btn_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/filter_btn_height</item>
        <item name="android:button">@null</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="NoItemTitleTextViewStyle" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="NoItemContentTextViewStyle" parent="Base.TextAppearance.AppCompat.Subhead">

    </style>

    <style name="DetailTitleTextViewStyle" parent="Base.TextAppearance.AppCompat.Display1">
        <item name="android:textStyle">bold</item>
    </style>

</resources>